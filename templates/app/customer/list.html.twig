{% extends '@layout/default.html.twig' %}

{% block title %}Customers :: {{ parent() }}{% endblock %}

{% block page_header %}Customers{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">All Customers</h3>
                    <div class="pull-right">
                        <a href="{{ url('admin.customers.create') }}" class="btn btn-primary btn-xs">
                            <i class="fa fa-plus-circle"></i>
                            New Customer
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th width="5%">Id</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th width="15%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for customer in customers %}
                            <tr>
                                <td>{{ customer.id }}</td>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.email }}</td>
                                <td>
                                    <a href="{{ url('admin.customers.update', {'id': customer.id}) }}" class="btn btn-primary btn-xs">Edit</a>
                                    <a href="{{ url('admin.customers.delete', {'id': customer.id}) }}" class="btn btn-warning btn-xs">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
