{% extends '@layout/default.html.twig' %}

{% block title %}Update Customer :: {{ parent() }}{% endblock %}

{% block page_header %}Customers{% endblock %}

{% set name = form.get('name') %}
{% do name.setOptions({'label_attributes': {'class': 'col-sm-2 control-label'}}) %}
{% do name.setAttribute('class', 'form-control') %}

{% set email = form.get('email') %}
{% do email.setOptions({'label_attributes': {'class': 'col-sm-2 control-label'}}) %}
{% do email.setAttribute('class', 'form-control') %}

{% set submit = form.get('submit') %}
{% do submit.setAttribute('class', 'btn btn-primary') %}

{% do form.setAttribute('class', 'form-horizontal') %}
{% do form.setAttribute('action', url('admin.customers.update', {'id': form.getObject().id})) %}
{% do form.prepare() %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                {{ form().openTag(form) | raw }}
                {{ formHidden(form.get('_method')) }}
                <div class="box-header with-border">
                    <h3 class="box-title">Update Customer</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        {{ formLabel(name) }}
                        <div class="col-sm-8">
                            {{ formInput(name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ formLabel(email) }}
                        <div class="col-sm-8">
                            {{ formInput(email) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            {{ formButton(submit) }}
                            <a href="{{ url('admin.customers.list') }}" class="btn btn-default">Cancel</a>
                        </div>
                    </div>
                </div>
                {{ form().closeTag() | raw }}
            </div>
        </div>
    </div>
{% endblock %}
