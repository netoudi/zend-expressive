{% extends '@layout/default.html.twig' %}

{% block title %}Delete Customer :: {{ parent() }}{% endblock %}

{% block page_header %}Customers{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <form action="{{ url('admin.customers.delete', {'id': customer.id}) }}" method="post" class="form-horizontal">
                    <input type="hidden" name="_method" value="DELETE">
                    <div class="box-header with-border">
                        <h3 class="box-title">Delete Customer</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label">Name:</label>
                            <div class="col-sm-8">
                                <input type="text" value="{{ customer.name }}" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">E-mail:</label>
                            <div class="col-sm-8">
                                <input type="text" value="{{ customer.email }}" class="form-control" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-2">
                                <input type="submit" value="Delete" class="btn btn-danger">
                                <a href="{{ url('admin.customers.list') }}" class="btn btn-default">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
